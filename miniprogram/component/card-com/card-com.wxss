/* miniprogram/component/card-com/card-com.wxss */
.content_box{
  margin: 0 20rpx;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 20rpx;
  /* border-top: 1px solid #b383ff;
  border-bottom: 3px solid #7122ef; */
}
.content_box .content_header{
  padding: 20rpx;
}
.content_box .content_header .head_portrait{
  width: 38px;
  height: 38px;
  border-radius: 38px;
}
.content_box .content_header .user_info{
  font-size: 14px;
  color: #444;
  display: inline-block;
  margin-left: 20rpx;
  position: absolute;
}
.content_box .content_header .user_info .lable_box .lable{
  margin-right: 12rpx;
  line-height: 16px;
  height: 16px;
  color: #fff;
  border-radius: 34rpx;
  padding: 0 15rpx;
  display: inline-block;
  font-size: 10px;

}
.content_box .content_header .user_info .lable_box view{
  background-color: #2298ef;
  position: relative;
  padding-left: 20rpx;
}
.content_box .content_header .user_info .lable_box view image{
  width: 10px;
  height: 10px;
  position: absolute;
  top: 3px;
}
.content_box .content_header .user_info .lable_box view text{
  margin-left: 13px;
}
.content_box .content_header .user_info .lable_box .text{
  display: none;
}
.content_box .content_header .user_info .lable_box .text:nth-child(2){
  background-color: #b460e4;
  display: inline-block;
}
.content_box .content_header .user_info .lable_box text:nth-child(3){
  background-color: #2dc040;
  display: inline-block;
}
.content_box .content_header .user_info .lable_box text:nth-child(4){
  background-color: #e47f60;
  display: inline-block;
}
.content_box .content_header .follow{
  float: right;
  line-height: 38px;
  width: auto;
}
.card_photo,.card_video{
  width: 100%;
  max-height: 1000rpx;
}
.card_video{
  height: 300rpx;
}
.content_box .content_header .follow .van-button__text{
  margin-left: 2px;
}
.content_box .content_header .follow .custom_button{
  width: auto;
  padding: 0 12rpx;
}
.content_box .content_information{
  margin: 0 20rpx;
}
.content_box .content_information .title{
  border-top: 1px dashed #eee;
  padding: 15rpx 0 15rpx 0;
}
.content_box .content_information .title .title_value{
  font-size: 14px;
  color: #333;
}
.content_box .content_information .time_place{
  border-bottom: 1px dashed #eee;
  padding-bottom: 20rpx;
}
.content_box .content_information .time_place .box{
  height: 20px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content_box .content_information .time_place text{
  color: rgb(122, 122, 122);
  font-size: 12px;
  line-height: 20px;
}
.content_box .content_contact{
  padding: 30rpx;
  height: 40rpx;
}
.content_box .content_contact .name{
  font-size: 14px;
  color: rgb(133, 133, 133);
  position: absolute;
}
.content_box .content_contact .button{
  border: 1px solid rgb(199, 199, 199);
  color: rgb(199, 199, 199);
  border-radius: 3px;
  float: right;
  font-size: 12px;
  padding: 4rpx 28rpx 4rpx 10rpx;
  position: relative;
}
.content_box .content_contact .button van-icon{
  position: absolute;
  top: 6rpx;
}

.follow_button{
  display: inline-block;
  line-height: 20px;
  position: relative;
  border-radius: 20px;
  border: 1px solid #06c054;
  padding: 0 7px 0 18px;
  font-size: 12px;
  color: #06c054;
}
.follow_button van-icon{
  position: absolute;
  top: 1px;
  left: 5px;
}

van-count-down{
  float: right;
}

.inline{
  display: inline-block;
  margin-right: 4px;
}

.item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #1989fa;
  border-radius: 2px;
}