/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}



button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader, .tunnel {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text, .tunnel-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #7122ef;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

.tunnel {
  padding: 0 0 0 40rpx;
}

.tunnel-text {
  position: relative;
  color: #222;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.tunnel-text:first-child {
  border-top: none;
}

.tunnel-switch {
  position: absolute;
  right: 20rpx;
  top: -2rpx;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}
van-dialog{
  z-index: 100;
}
.van-dialog__header{
  padding: 25px 0;
}

.container{
  width: 100%;
  height: 34px;
}
.container van-tabs{
  width: 100%;
}
.container van-tabs .van-tabs__wrap{
  background-color: transparent;
  height: 34px;
}
.container van-tabs .van-tabs__line{
  background-color: #7122ef;
  height: 1px;
}
.container van-tabs .van-tab{
  line-height: 34px;
}
/**标签**/
.lable_box .lable{
  font-size: 12px;
  color: #fff;
  padding: 0 24rpx;
  border-radius: 40px;
  background-color: #2298ef;
  margin: 0 10rpx;
  line-height: 17px;
  height: 17px;
}
.lable_box .sex{
  display: inline-block;
  position: relative;
  height: 17px;
  line-height: 17px;
  border-radius: 50px;
  color: #fff;
  font-size: 12px;
  margin-right: 10rpx;
  padding: 0 12rpx;
}
.lable_box .sex image{
  width: 10px;
  height: 10px;
  position: absolute;
  top: 3px;
}
.lable_box .sex text{
  padding-left: 30rpx;
  font-size: 12px;
}

.lable_box .lable:nth-child(2){
  background-color: #b460e4;
}
.lable_box .lable:nth-child(3){
  background-color: #e47f60;
}
.lable_box .lable:nth-child(4){
  background-color: #76e460;
}

.load{
  width: 100%;
  text-align: center;
  padding-bottom: 10px;
}
.load text{
  font-size: 14px;
  color: #999
}

.empty{
  width: 100%;
  position: absolute;
  top: 35%;
  left: 50%;
  margin-left: -150rpx;
}
.empty image{
  width: 300rpx;
  height: 300rpx;
}
/**相册**/
.images_content{
  margin: 20rpx;
}
.images_content .photo,.images_content .video{
  width: 100%;
  text-align: center;
}
.images_content .image_box{
  margin: 10rpx;
  height: 216rpx;
  position: relative;
}
.images_content .image_box image{
  width: 100%;
  height: 100%;
}
.images_content .video_box{
  position: relative;
  margin: 10rpx;
  height: 216rpx;
}
.images_content .video_box video{
  width: 100%;
  height: 100%;
}
.images_content progress{
  position: absolute;
  bottom: 0;
  width: 100%;
  opacity: 0.8;
}
.images_content .delete{
  position: absolute;
  top: 3px;
  right: 3px;
  color: #999;
}
.images_content .upLoad{
  position: absolute;
  bottom: 0;
  left: 0;
  display: inline-block;
  width: 100%;
  line-height: 16px;
  font-size: 12px;
  color: #fff;
}
.images_content .upLoad.success{
  background-color: rgba(9, 230, 94, 0.8);
}
.images_content .upLoad.fail{
  background-color: rgba(253, 105, 37, 0.8);
}
/**通告栏**/
.van-notice-bar{
  height: 24px !important;
  padding: 0 10px !important;
}

/**footer**/
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.footer van-row van-col van-button .van-button--default{
  border: none;
}
.footer van-row van-col .gray .van-button--default{
  border-right: 1px solid #eee;
  color: #888;
}
.footer van-row van-col .blue .van-button--default{
  color: #7122ef;
}
.footer van-row van-col .blue_background .van-button--default{
  background-color: #7122ef;
  color: #fff;
}
.footer van-row van-col .red .van-button--default{
  color: #ed462f;
}
.footer van-row van-col .red_background .van-button--default{
  background-color: #ed462f;
  color: #fff;
}