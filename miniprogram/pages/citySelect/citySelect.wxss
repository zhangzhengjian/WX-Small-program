/* pages/citySelect/citySelect.wxss */
page{
  height: 100%;
}
.header{
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
}
.header .title{
  font-size: 12px;
  color: #999;
  display: block;
  line-height: 26px;
  padding: 0 26rpx;
  background-color: rgb(248, 248, 248);
}
.header .select_city{
  line-height: 40px;
  background-color: #fff;
  padding: 0 26rpx;
  position: relative;
}
.header .select_city van-icon{
  position: absolute;
  top: 2px;
}
.header .select_city text{
  font-size: 14px;
  color: #2298ef;
  margin-left: 20px
}
.header .submit{
  line-height: 1.8;
  font-size: 12px;
  padding: 0 1.7ex;
  position: absolute;
  right:30rpx;
  top: 9px;
  border-color: #2298ef;
  color: #2298ef;
}
.header .button-hover{
  border-color: #94c9ee;
  color: #7dc3f5;
}
scroll-view{
  margin-top: 68px;
  height:-webkit-calc(100% - 68px); 
  height:-moz-calc(100% - 68px); 
  height:calc(100% - 68px);
}
.city_select .acronym{
    display: block;
    line-height: 30px;
    font-size: 16px;
    color: #2298ef;
    margin: 0 26rpx;
}
.city_select .city_box{
  background-color: #fff;
}
.city_select .city_box .city{
    border-bottom: 1px solid #eee;
    margin: 0 26rpx;
}
.city_select .city_box .city text{
   line-height: 36px;
   display:inline-block;
   font-size: 14px;
   color: #666;
   min-width: 50%;
}
.city_select .city_box .city:nth-last-child(1){
    border-bottom: none;
}
.letter{
  z-index: 20;
  position: fixed;
  top: 72px;
  width: 40px;
  height: auto;
  right: 0rpx;
  text-align: center;
}
.letter text{
  display: block;
  line-height: 18px;
  font-size: 12px;
  color: #999;

}