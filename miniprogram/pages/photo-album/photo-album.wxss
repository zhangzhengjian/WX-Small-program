/* pages/photo-album/photo-album.wxss */
.images_title{
  padding-left: 30rpx;
  font-size: 14px;
  color: #666;
}
.images_title .year{
  font-size: 14px;
}
.images_title .month,.images_title .date{
  font-size: 18px;
  color: #444;
}
.image_select{
  position: absolute;
  top: 3px;
  right: 3px;
  color: #999;
}
.image_select .select .van-icon{
  background-color: #fff;
  border-radius: 20px;
  /* border: 1px solid #fff; */
}
.image_select .no_select .van-icon{
  background-color: #000;
  border-radius: 20px;
  /* border: 1px solid #fff; */
}
.video_mask{
  width: 100%;
  height: 100%;
  background-color: #000;
  position: fixed;
  top: 0;
  line-height: 100%;
}
.video_mask video{
  position: absolute;
  width: 750rpx;
  height: 560rpx;
  top: 50%;
  margin-top: -300rpx;
}

.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
}
.footer .footer_box{
  margin: 0 30rpx 20rpx 30rpx;
}
.footer van-button .van-button{
  width: 100%;
  background-color: #7122ef !important;
  color: #fff;
  border: none;
}
.footer .cencel .van-button{
  background-color: #ffffff !important;
  color: rgb(122, 122, 122);
  border: 1px solid rgb(214, 214, 214);
}