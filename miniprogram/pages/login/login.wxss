/* pages/login/login.wxss */
page{
  height: 100%;
}
.login{
  height: 100%;
  background-color: #7122ef;
  position: relative;
}
.background{
  width: 100%;
}
.login .weixin{
   width: 90px;
   height: 90px;
   display: inline-block;
   border-radius: 100px;
   position: absolute;
   top: 30%;
   left: 50%;
   margin-left: -45px;
}
.login .weixin image{
   width: 100%;
   height: 100%;
}
.login .weixin text{
   color: #fff;
   opacity: 0.8;
   margin-top: 10px;
   font-size: 14px;
   display: block;
   text-align: center;
}
.login .button_box{
  position: absolute;
  width: 100%;
  top: 70%;
}
.login .login_button{
  border: 1px solid #fff;
  margin: 0 40rpx;
  line-height: 36px;
  font-size: 14px;
  color: #7122ef;
  border-radius: 36px;
  background-color: #fff;
}
.login .cancel_button{
  border: 1px solid #fff;
  margin: 0 40rpx;
  line-height: 36px;
  font-size: 14px;
  color: #fff;
  border-radius: 36px;
  margin-top: 10px;
}