/* component/photo-com/photo-com.wxss */
.photo-com .photo,.images_content .video{
  width: 100%;
  text-align: center;
}
.photo-com .image_box{
  margin: 10rpx;
  height: 216rpx;
  position: relative;
}
.photo-com .image_box image{
  width: 100%;
  height: 100%;
}
.photo-com .video_box{
  position: relative;
  margin: 10rpx;
  height: 216rpx;
}
.photo-com .video_box video{
  width: 100%;
  height: 100%;
}
.photo-com progress{
  position: absolute;
  bottom: 0;
  width: 100%;
  opacity: 0.8;
}
.photo-com .delete{
  position: absolute;
  top: 3px;
  right: 3px;
  color: #999;
}
.photo-com .upLoad{
  position: absolute;
  bottom: 0;
  left: 0;
  display: inline-block;
  width: 100%;
  line-height: 16px;
  font-size: 12px;
  color: #fff;
}
.photo-com .upLoad.success{
  background-color: rgba(9, 230, 94, 0.8);
}
.photo-com .upLoad.fail{
  background-color: rgba(253, 105, 37, 0.8);
}