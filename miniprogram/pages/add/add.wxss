/* pages/add/add.wxss */
.add_images{
  margin: 20rpx 10rpx;
}
.add_images .van-cell{
  border-bottom: none;
  background-color: transparent;
}
.add_images .van-cell .van-cell__title{
  margin-left: 10rpx;
}
.add_images .image_title{
  display: inline-block;
  line-height: 30px;
  color: #444;
  font-size: 14px;
  margin: 0 10rpx;
}
.add_images .image_box image{
  
}
van-field.select_fill .van-cell{
  padding: 10px 2px 10px 6px;
  border-bottom: 1px solid #eee;
}
van-field.must_fill .van-cell{
  padding-right: 2px;
  border-bottom: 1px solid #eee;
}
.no_border .van-cell{
  border-bottom: none !important;
}
.border .van-cell{
  border-top: 1px solid #eee;
}
van-field:nth-last-child(1) .van-cell,.image_field .van-cell{
  border-bottom: none !important;
}
.textarea{
  display: block;
  min-height: 100px;
  margin: 0 4px;
  color: rgb(134, 134, 134);
  font-size: 14px;
  line-height: 20px;
}
.background{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.background .title{
  font-size: 14px;
  color: rgb(32, 32, 32);
  font-weight: bold;
  display: block;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  padding: 0 28rpx;
  background-color: #fff;
  z-index: 1000;
}
.background .padding .van-cell-group{
  min-height: 120px;
}
.background .padding{
  padding: 0 20rpx;
  z-index: 0;
}
.van-notice-bar .van-notice-bar__content{
  font-size: 12px;
}